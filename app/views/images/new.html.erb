<h2>Upload</h2>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_for @image do |f| %>
      <div class="form-group">
        <%= f.label :image %>
        <%= f.drag_and_drop_file_field :image,  'Drag and drop image here' %>
      </div>

     <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description , class: 'form-control' %>
      </div>
      
      <%= f.submit "投稿する", class: 'btn btn-primary' %>      
    <% end %>
  </div>
</div>
