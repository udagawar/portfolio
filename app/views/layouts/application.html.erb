<!DOCTYPE html>
<html>
  <head>
    <title>Insta-clone2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <%= link_to "Insta-clone2", root_path, class: 'navbar-brand' %>
      
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to "トップ", root_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to "投稿一覧", images_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to "投稿する", upload_path, class: 'btn btn-primary' %>
        </li>
      </ul>
      
      <ul class="navbar-nav">
        <li class="nav-item">
          <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to current_user.full_name, profile_path(current_user.username), class: 'nav-link' %>
        </li>
          <li class="nav-item">
            <%= link_to "Log Out", destroy_user_session_path, class: 'nav-link', method: :delete %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "ログイン", new_user_session_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to "新規登録", new_user_registration_path, class: 'btn btn-primary' %>
          </li>        
        <% end %>
        </li>  
      </ul>
    </div>
  </div>

    <%# ==========ここから追加する========== %>
    <% if flash[:notice] %>
      <div class="alert alert-info">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="alert alert-danger">
        <%= flash[:alert] %>
      </div>
    <% end %>
    <%# ==========ここまで追加する========== %>    
    
    
      <div class="container">   
    <%= yield %>
      </div>
  </body>
</html>
